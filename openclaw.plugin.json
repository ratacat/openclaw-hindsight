{
  "id": "openclaw-hindsight",
  "kind": "memory",
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "baseUrl": {
        "type": "string",
        "default": "http://localhost:8888"
      },
      "bankId": {
        "type": "string",
        "default": "sapphira"
      },
      "retainOnWrite": {
        "type": "boolean",
        "default": true
      },
      "retainDebounceMs": {
        "type": "number",
        "default": 30000
      },
      "recallBudget": {
        "type": "string",
        "enum": ["low", "mid", "high"],
        "default": "mid"
      },
      "maxTokens": {
        "type": "number",
        "default": 4096
      },
      "fallbackToLocal": {
        "type": "boolean",
        "default": true
      },
      "reflectEnabled": {
        "type": "boolean",
        "default": true
      },
      "autoRecall": {
        "type": "boolean",
        "default": false
      },
      "autoRetain": {
        "type": "boolean",
        "default": true
      }
    }
  },
  "uiHints": {
    "baseUrl": { "label": "Hindsight URL", "placeholder": "http://localhost:8888" },
    "bankId": { "label": "Memory Bank ID", "placeholder": "sapphira" },
    "recallBudget": { "label": "Recall Budget" },
    "maxTokens": { "label": "Max Recall Tokens" }
  }
}
